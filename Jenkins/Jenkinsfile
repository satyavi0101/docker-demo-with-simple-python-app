pipeline {
    agent any

    environment {
        AWS_REGION = 'us-east-1'
        TF_IN_AUTOMATION = 'true'
    }

    stages {
        stage('Checkout') {
            steps {
                echo '📥 Cloning repository...'
                git branch: 'main', url: 'https://github.com/satyavi0101/docker-demo-with-simple-python-app.git'
            }
        }

        stage('Terraform Init & Apply') {
            steps {
                echo '🔧 Initializing and applying Terraform...'
                sh '''
                    echo "👉 Checking Terraform version"
                    terraform --version

                    echo "🚀 Running terraform init"
                    terraform init -input=false

                    echo "⚙️ Running terraform apply"
                    terraform apply -auto-approve
                '''
            }
        }

        stage('Output Deployment Info') {
            steps {
                echo '📦 Fetching Terraform output...'
                sh 'terraform output'
            }
        }
    }

    post {
        success {
            echo '✅ Terraform provisioning completed successfully.'
        }
        failure {
            echo '❌ Terraform provisioning failed. Please check the logs above for details.'
        }
    }
}
