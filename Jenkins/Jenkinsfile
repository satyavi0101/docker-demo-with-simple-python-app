pipeline {
    agent any

    environment {
        AWS_REGION = 'us-east-1'
        TF_IN_AUTOMATION = 'true'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'ğŸ“¥ Cloning repository...'
                git branch: 'main', url: 'https://github.com/satyavi0101/docker-demo-with-simple-python-app.git'
            }
        }

        stage('Terraform Init & Apply') {
            steps {
                echo 'ğŸ”§ Initializing and applying Terraform...'
                sh '''
                    echo "ğŸ‘‰ Checking Terraform version"
                    terraform --version

                    echo "ğŸš€ Running terraform init"
                    terraform init -input=false

                    echo "âš™ï¸ Running terraform apply"
                    terraform apply -auto-approve
                '''
            }
        }

        stage('Output Deployment Info') {
            steps {
                echo 'ğŸ“¦ Fetching Terraform output...'
                sh 'terraform output'
            }
        }
    }

    post {
        success {
            echo 'âœ… Terraform provisioning completed successfully.'
        }
        failure {
            echo 'âŒ Terraform provisioning failed. Please check the logs above for details.'
        }
    }
}
