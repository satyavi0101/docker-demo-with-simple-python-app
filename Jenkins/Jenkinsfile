pipeline {
    agent any

    tools {
        terraform 'terraform'  // Must match the name you added in Jenkins UI
    }

    environment {
        AWS_REGION = 'us-east-1'
        TF_IN_AUTOMATION = 'true'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/satyavi0101/docker-demo-with-simple-python-app.git'
            }
        }

        stage('Terraform Init & Apply') {
            steps {
                sh 'terraform init'
                sh 'terraform apply -auto-approve'
            }
        }

        stage('Output Deployment Info') {
            steps {
                sh 'terraform output -json'
            }
        }
    }

    post {
        success {
            echo '✅ Infrastructure provisioned and Docker image deployed via Terraform.'
        }
        failure {
            echo '❌ Pipeline failed. Check logs for details.'
        }
    }
}
